<!DOCTYPE html>
<html>
  <head>
    <title>ThesisManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag 'application' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>


  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">

    <%= link_to "Thesis Management System", root_path, class: 'navbar-brand '  %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">

        </li>
        <li class="nav-item">
          <% if student_signed_in? %>

  <%= link_to 'Log Out', destroy_student_session_path, class: 'nav-link', method: :delete %>
<% end %>

        </li>
        <li class="nav-item">
          <% if professor_signed_in? %>

  <%= link_to 'Log Out', destroy_professor_session_path, class: 'nav-link', method: :delete %>
<% end %>

        </li>
        <li class="nav-item">
          <% if professor_signed_in? %>

  <%= link_to 'View Thesis', professors_index_path, class: 'nav-link' %>
<% end %>

        </li>
        <li class="nav-item">
          <% if student_signed_in? %>
          <% student = current_student %>
          <% if student.theses.present? %>
          <%= link_to 'View Thesis', student_path(id: student.theses.last.id), class: 'nav-link' %>
          <% else %>
          <%= link_to 'New Thesis', students_new_thesis_path, class: 'nav-link' %>
<% end %>
<% end %>

        </li>

      </ul>
    </div>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
